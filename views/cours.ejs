<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/login.css">
    <title><%= title %></title>
</head>
<body>
    <div class="wrapper">
        <div class="title-text">
          <div class="title signup">Adding Course Formulaire</div>
        </div>
        <div class="form-container">
          <div class="slide-controls">
            <div class="slider-tab"></div>
          </div>
          <div class="form-inner">
            <form action="/signup" class="signup" method="POST" enctype="multipart/form-data">
              <div class="field">
                <input id="name" name="title" type="text" placeholder="title" required>
              </div>
              <div class="field">
                <input id="email" name="Description" type="text" placeholder="Description" required>
              </div>
              
              <div class="field btn">
                <div class="btn-layer"></div>
                <input id="submit" type="submit" value="Signup">
              </div>
            </form>
          </div>
        </div>
      </div>
  <script src="../js/jquery.js"></script>
  <script src="/js/login.js"></script>
</body>
</html>