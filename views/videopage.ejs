    padding-bottom: 15px;
    position: relative;
    margin-left: 50px;
  }
  .three h1:before {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    height: 5px;
    width: 70px;
    background-color: #136c99;
  }
  .three h1:after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 2px;
    height: 1px;
    width: 95%;
    max-width: 300px;
    background-color: #136c99;
  }
  
  .eight h1 {
